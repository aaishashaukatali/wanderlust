<% layout("/layout/boilerplate") %>

    <body>

        <div class="container mt-5">
            <div class="row">
                <div class="col-2"></div>
                <div class="col-8">
                    <h3>Edit your List</h3>
                    <form action="/listings/<%=listing._id%>?_method=PUT" method="POST" class="needs-validation"
                        novalidate enctype="multipart/form-data">

                        <div>
                            <label for="title" class="form-label">Title</label>
                            <input name="listing[title]" value="<%= listing.title %>" id="title"
                                placeholder="Add a catchy title" type="text" class="form-control" required>
                            <div class="valid-feedback">
                                Title Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Title is required.
                            </div><br>
                        </div>
                        <div>
                            <label for="description" class="form-label">Description</label>
                            <textarea name="listing[description]" id="description" placeholder="Add description"
                                type="text" class="form-control" required><%= listing.description %></textarea>
                            <div class="valid-feedback">
                                Description makes reaseonable impression.
                            </div>
                            <div class="invalid-feedback">
                                Description is missing.
                            </div>
                            <br>
                        </div>
                        <div>
                            <img src="<%= originalImageUrl %>" style="width:300px">
                        </div><br>
                        <div>
                            <label for="image" class="form-label">Upload Image</label>
                            <input name="listing[image]" id="image" type="file" class="form-control">
                            <br>
                        </div>
                        <div class="row">
                            <div class="col-lg-4">
                                <div>
                                    <label for="price" class="form-label">Price</label>
                                    <input name="listing[price]" value="<%= listing.price %>" id="price"
                                        placeholder="1500" type="number" class="form-control" required>
                                    <div class="valid-feedback">
                                        Price is valid.
                                    </div>
                                    <div class="invalid-feedback">
                                        Price is missing.
                                    </div>
                                </div>
                                <br>

                            </div>
                            <div class="col-lg-8">
                                <div>
                                    <label for="country" class="form-label">Country</label>
                                    <input name="listing[country]" value="<%= listing.country %>" id="country"
                                        placeholder="India" type="text" class="form-control" required>
                                    <div class="valid-feedback">
                                        Valid country name.
                                    </div>
                                    <div class="invalid-feedback">
                                        Country name is missing.
                                    </div><br>
                                </div>
                            </div>
                        </div>
                        <div>
                            <label for="location" class="form-label">Location</label>
                            <input name="listing[location]" value="<%= listing.location %>" id="location"
                                placeholder="Shimla, H.P" type="text" class="form-control" required>
                            <div class="valid-feedback">
                                Location make easy to find better place.
                            </div>
                            <div class="invalid-feedback">
                                Location is missing.
                            </div>
                            <br>
                        </div>
                        <div>
                            <label class="form-label" for="category">Category</label>
                            <select name="listing[category]" id="category" class="form-select" required>
                                <option value="rooms">Rooms</option>
                                <option value="iconic cities">Iconic Cities</option>
                                <option value="mountains">Mountains</option>
                                <option value="castles">Castles</option>
                                <option value="camping">Camping</option>
                                <option value="farm">Farm</option>
                                <option value="arctic">Arctic</option>
                                <option value="domes">Domes</option>
                                <option value="boats">Boats</option>
                            </select>
                        </div><br>
                        <button class="btn btn-dark edit-btn">Edit List</button>
                    </form>
                </div>
                <div class="col-2"></div>
            </div>
        </div>

    </body>